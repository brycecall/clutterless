<?xml version='1.0' encoding='utf-8'?>
    <widget id="com.spark.clutterless" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>Clutterless</name>
        <description>
            A simple home clutter remover coordinator app.
        </description>
        <author email="brycecall@gmail.com">
            Bryce Call
        </author>
        <content src="index.html" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />

        <icon src="assets/icon.png" />

        <platform name="android">
            <allow-intent href="market:*" />
            <splash src="assets/splash.png" />
        </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" />
            <!-- iOS 8.0+ -->
            <!-- iPhone 6 Plus  -->
            <icon src="assets/icon-180.png" width="180" height="180" />
            <!-- iOS 7.0+ -->
            <!-- iPhone / iPod Touch  -->
            <icon src="assets/icon-60.png" width="60" height="60" />
            <icon src="assets/icon-120.png" width="120" height="120" />
            <!-- iPad -->
            <icon src="assets/icon-76.png" width="76" height="76" />
            <icon src="assets/icon-152.png" width="152" height="152" />
            <!-- iOS 6.1 -->
            <!-- Spotlight Icon -->
            <icon src="assets/icon-40.png" width="40" height="40" />
            <icon src="assets/icon-80.png" width="80" height="80" />
            <!-- iPhone / iPod Touch -->
            <icon src="assets/icon-57.png" width="57" height="57" />
            <icon src="assets/icon-114.png" width="114" height="114" />
            <!-- iPad -->
            <icon src="assets/icon-72.png" width="72" height="72" />
            <icon src="assets/icon-144.png" width="144" height="144" />
            <!-- iPhone Spotlight and Settings Icon -->
            <icon src="assets/icon-29.png" width="29" height="29" />
            <icon src="assets/icon-58.png" width="58" height="58" />
            <!-- iPad Spotlight and Settings Icon -->
            <icon src="assets/icon-50.png" width="50" height="50" />
            <icon src="assets/icon-100.png" width="100" height="100" />
        </platform>
    </widget>